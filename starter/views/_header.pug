header.header
    nav.nav.nav--tours
        a.nav__el(href="/") All tours 
    .header__logo
        img(src="/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href="/me")
                if user.photo.includes('cloudinary')
                    img.nav__user-img(src=user.photo, alt=`Photo of ${user.name}`)
                else 
                    img.reviews__avatar-img(src=`/img/users/${user.photo}` alt=`${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/signUp') Sign up
